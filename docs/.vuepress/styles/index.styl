

.theme-container.daily-page-class {
    main{
            max-width: 960px;
        p{
            display: flex;
            flex-wrap: wrap;
        }
        h1,
        h2,
        h3{
            padding-left: 20px;
            border-bottom: 0;
            a {
                display: none;
            }
        }
        a{
            position: relative;
            padding: 20px;
            border: 1px solid #eee;
            margin: 10px;
            border-radius: 5px;

        span{
            display: none;
        }

        &:hover{
            text-decoration: none;
            box-shadow: 5px 5px 2px 0px rgba(0,0,0,0.2);
            

        }

        }
    }
}